<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail_outline_black_24dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/envolope"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_type"
        android:text="Send"
        android:layout_toRightOf="@+id/envolope"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destinataire_name"
        android:layout_below="@+id/status_type"
        android:text="John"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/envolope"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/destinataire_name"
        android:text="john@gmail.com"
        android:layout_toRightOf="@+id/envolope"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money"
        android:layout_alignParentRight="true"
        android:text="$500"
        android:textSize="20dp"
        android:layout_below="@+id/status_type"/>

</RelativeLayout>